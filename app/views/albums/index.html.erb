<h1> Albums </h1>
<body>
<% if @albums.any?%>
<% @albums.each do |album| %>
  <%= link_to image_tag(album.images.first.photo.url(:thumb)), album %><br>
  <%= album.images.count %> Images.
<% end %>
<% else %>
  <b> Empty ? <%= link_to 'create an album', new_album_path %></b>
<% end %>
</body>
<br><br><br><%= button_to 'New Album', new_album_path, :method=>"get" %>
